<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <View
        android:layout_width="0.2dp"
        android:layout_height="match_parent"
        android:layout_gravity="right"
        android:background="#28ffffff" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:paddingTop="14.5dp"
            android:paddingBottom="10dp">

            <TextView
                android:id="@+id/tv_week"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:fontFamily="@font/inter"
                android:includeFontPadding="false"
                android:textStyle="normal"
                android:textSize="14sp"
                android:textColor="#222222"
                android:lineSpacingExtra="21sp"
                android:text="今天"/>

            <TextView
                android:id="@+id/tv_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginTop="9.5dp"
                android:layout_marginBottom="10dp"
                android:includeFontPadding="false"
                android:fontFamily="@font/inter"
                android:textStyle="normal"
                android:textSize="12sp"
                android:textColor="#222222"
                android:lineSpacingExtra="23sp"
                android:text="12/04"/>

            <TextView
                android:id="@+id/tv_air"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginBottom="10dp"
                android:includeFontPadding="false"
                android:background="@drawable/air_1"
                android:fontFamily="@font/inter_medium"
                android:textStyle="bold"
                android:textSize="10sp"
                android:textColor="#ffffff"
                android:lineSpacingExtra="25sp"
                android:text="优"
                />

            <TextView
                android:id="@+id/tv_day_weather"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:gravity="center"
                android:layout_marginBottom="7dp"
                android:includeFontPadding="false"
                android:fontFamily="@font/inter_medium"
                android:textStyle="bold"
                android:textSize="14sp"
                android:textColor="#222222"
                android:lineSpacingExtra="21sp"
                android:text="晴"/>

            <ImageView
                android:id="@+id/iv_day_weather"
                android:layout_width="30dp"
                android:layout_height="30dp"/>

            <TextView
                android:id="@+id/tv_day_temp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:fontFamily="@font/inter"
                android:textStyle="normal"
                android:textSize="14sp"
                android:textColor="#222222"
                android:lineSpacingExtra="21sp"
                android:text="4°"
                />

            <com.nelson.weather.view.TemperatureView
                android:id="@+id/ttv_day"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp" />

            <TextView
                android:id="@+id/tv_night_temp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:fontFamily="@font/inter"
                android:textStyle="normal"
                android:textSize="14sp"
                android:textColor="#222222"
                android:lineSpacingExtra="21sp"
                android:text="-4°"
                />

            <ImageView
                android:id="@+id/iv_night_weather"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="7dp"/>

            <TextView
                android:id="@+id/tv_night_weather"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:includeFontPadding="false"
                android:fontFamily="@font/inter_medium"
                android:textStyle="bold"
                android:textSize="14sp"
                android:textColor="#222222"
                android:lineSpacingExtra="21sp"
                android:text="晴"/>

            <TextView
                android:id="@+id/tv_wind_ori"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="8dp"
                android:includeFontPadding="false"
                android:fontFamily="@font/inter"
                android:textStyle="normal"
                android:textSize="12sp"
                android:textColor="#222222"
                android:lineSpacingExtra="23sp"
                android:text="西南风"/>

            <TextView
                android:id="@+id/tv_wind_level"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:includeFontPadding="false"
                android:fontFamily="@font/inter"
                android:textStyle="normal"
                android:textSize="12sp"
                android:textColor="#a7a7a7"
                android:lineSpacingExtra="23sp"
                android:text="3级"/>
        </LinearLayout>
</FrameLayout>