<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_ad_layout_koala"
    android:layout_width="164dp"
    android:layout_height="79dp"
    android:background="#00000000">

    <ImageView
        android:id="@+id/iv_ad_btn_close_koala"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_alignParentRight="true"
        android:src="@drawable/btn_close_1" />

    <FrameLayout
        android:id="@+id/al_ad_container_koala"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/iv_ad_btn_close_koala"
        android:background="@drawable/circular_rectangle"
        android:layout_marginTop="7dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:background="@drawable/ad_1_bg">

            <net.appcloudbox.ads.base.ContainerView.AcbNativeAdIconView
                android:id="@+id/niv_ad_icon_koala"
                android:layout_width="73dp"
                android:layout_height="match_parent"
                android:scaleType="fitCenter"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="6.5dp"/>

            <TextView
                android:id="@+id/tv_ad_body_koala"
                android:layout_width="54dp"
                android:layout_height="wrap_content"
                android:textStyle="normal"
                android:textSize="11sp"
                android:textColor="#ffffff"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="12.5dp"
                android:text="广告体广告体广告体"
                android:ellipsize="end"
                android:maxEms="7"
                android:lines="2"/>

            <ImageView
                android:id="@+id/iv_ad_btn_next_koala"
                android:layout_width="4dp"
                android:layout_height="8dp"
                android:src="@drawable/icon_next"
                android:layout_gravity="center_vertical"/>

        </LinearLayout>
    </FrameLayout>

</RelativeLayout>