<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/item_life">

    <androidx.cardview.widget.CardView
        app:cardCornerRadius="10dp"
        app:cardElevation="3dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/card_margin_tb"
        android:layout_marginBottom="@dimen/card_margin_tb"
        android:layout_marginLeft="@dimen/card_margin_lr"
        android:layout_marginRight="@dimen/card_margin_lr">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="19dp"
                    android:layout_marginBottom="11dp"
                    android:layout_marginLeft="16.5dp"
                    android:fontFamily="@font/inter"
                    android:includeFontPadding="false"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:textColor="#222222"
                    android:lineSpacingExtra="19sp"
                    android:text="生活服务"
                    android:layout_centerVertical="true"
                    android:layout_alignParentLeft="true"/>

                <!--<include
                    layout="@layout/ad_native_title"
                    android:layout_width="163dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"/>-->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginBottom="11dp"
                    android:id="@+id/ad_life_container"
                    android:background="@drawable/circular_rectangle_white">
                    <FrameLayout
                        android:id="@+id/ad_title_container"
                        android:layout_width="163dp"
                        android:layout_height="wrap_content" />
                    <ImageView
                        android:id="@+id/ad_titledailylife_btnclose"
                        android:layout_width="9dp"
                        android:layout_height="9dp"
                        android:src="@drawable/btn_close_3"
                        android:layout_marginLeft="7dp"
                        android:layout_marginRight="5dp"
                        android:layout_gravity="center_vertical"/>
                </LinearLayout>

            </RelativeLayout>

            <androidx.viewpager.widget.ViewPager
                android:id="@+id/vp_life"
                android:layout_width="match_parent"
                android:layout_height="190dp"
                />

            <LinearLayout
                android:id="@+id/ll_dots"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:layout_marginBottom="20dp"
                android:orientation="horizontal" >
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</FrameLayout>